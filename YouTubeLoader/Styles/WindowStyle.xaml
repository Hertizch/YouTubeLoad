<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="StyleMainWindow" TargetType="{x:Type Window}">
        <!-- Window Chrome -->
        <Setter Property="WindowChrome.WindowChrome">
            <Setter.Value>
                <WindowChrome ResizeBorderThickness="5" GlassFrameThickness="0,0,0,1" CornerRadius="1" CaptionHeight="35" UseAeroCaptionButtons="False" />
            </Setter.Value>
        </Setter>

        <!-- Properties -->
        <Setter Property="UseLayoutRounding" Value="True" />
        <Setter Property="WindowStyle" Value="None" />
        <Setter Property="BorderBrush" Value="#FF111111" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Background" Value="#FF1F1E1D" />
        <Setter Property="MinHeight" Value="380" />
        <Setter Property="MinWidth" Value="570" />

        <!-- Template -->
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Window}">
                    <Border BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}" Background="{TemplateBinding Background}">
                        <ContentPresenter />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>